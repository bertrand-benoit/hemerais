<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.1.dtd">

<struts>

	<constant name="struts.devMode" value="true" />

	<package name="org.hemera" extends="struts-default">
        
        <!-- Redirect on index, if no action is specified. -->
        <action name="">
			<result>/pages/index.jsp</result>
		</action>

		<action name="index">
			<result>/pages/index.jsp</result>
		</action>
		
				
        <action name="configuration" class="org.hemera.ConfigurationAction" method="execute">
          <result name="success">/pages/configuration.jsp</result>
        </action>

	</package>

</struts>
