<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.1.dtd">

<struts>

	<constant name="struts.devMode" value="true" />

  <!-- Defines the global i18n messages file. -->
  <constant name="struts.locale" value="en" />
  <constant name="struts.custom.i18n.resources" value="messages" />
  <constant name="struts.i18n.encoding" value="UTF-8" />

	<package name="org.hemera" namespace="/" extends="struts-default">
        
    <!-- Redirect on index, if no action is specified. -->
    <action name="" class="org.hemera.IndexAction" method="execute">
      <result>/pages/index.jsp</result>
    </action>
    
    <action name="index" class="org.hemera.IndexAction" method="execute">
      <result>/pages/index.jsp</result>
    </action>
				
    <action name="configuration" class="org.hemera.ConfigurationAction" method="execute">
      <result>/pages/configuration.jsp</result>
    </action>
        
    <action name="processing" class="org.hemera.ProcessingAction" method="execute">
      <result>/pages/processing.jsp</result>
    </action>
    
    <action name="changelog" class="org.hemera.ChangeLogAction" method="execute">
      <result>/pages/changelog.jsp</result>
    </action>
    
    <action name="licenses" class="org.hemera.LicenseAction" method="execute">
      <result>/pages/licenses.jsp</result>
    </action>
	</package>
	
  <package name="org.hemera.json" namespace="/" extends="json-default">
    <action name="processingData" class="org.hemera.json.ProcessingDataAction">
      <result type="json" />
    </action>
  </package>

</struts>
